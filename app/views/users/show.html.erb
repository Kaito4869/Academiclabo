<div class="body">
  <div class="bg"></div>
  <div class="bg bg2"></div>
  <div class="bg bg3"></div>
  <div class="content">
  <div class="new-header">
    <%= link_to "Academiclabo", "/", class: :logo%>
  </div>
  <div class="user-main">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table_col1">ニックネーム</th>
            <td class="table_col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table_col1">学年</th>
            <td class="table_col2"><%= @user.grade.name %></td>
          </tr>
        </tbody>
      </table>
      <div class="center-box">
        <h2 class="center-title"><%= "#{@user.nickname}さんの投稿" %></h2>
        <div class="cols">
          <%= render partial: 'posts/post', collection: @user.posts %>
        </div>
      </div>
  </div>
  <div class="footer">
  </div>
</div>