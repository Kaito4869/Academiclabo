<div class="body">
  <div class="bg"></div>
  <div class="bg bg2"></div>
  <div class="bg bg3"></div>
  <div class="content">
  <div class="new-header">
    <%= link_to "Academiclabo", "/", class: :logo%>
  </div>
  <div class="user-main">
    <div class="follow-form">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>
      <%= render partial: 'relationships/follow_button', user: @user, class: :follow_button %>
    </div>
    <table class="table">
      <tbody>
        <tr>
          <th class="table_col1">nickname</th>
          <td class="table_col2"><%= @user.nickname %></td>
        </tr>
        <tr>
          <th class="table_col1">grade</th>
          <td class="table_col2"><%= @user.grade.name %></td>
        </tr>
        <tr>
          <th class="table_col1">follow</th>
          <td class="table_col2">
            <%= "#{@user.following_ids.count}人 :"%>
            <% @users1.each do |user| %>
              <%=link_to "#{user.nickname}", user_path(user) %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="table_col1">follower</th>
          <td class="table_col2">
            <%= "#{@user.follower_ids.count}人 :"%>
            <% @users2.each do |user| %>
              <%=link_to "#{user.nickname}", user_path(user) %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="center-box">
      <h2 class="center-title"><%= "#{@user.nickname}さんの投稿" %></h2>
      <div class="cols">
        <%= render partial: 'posts/post', collection: @user.posts %>
      </div>
    </div>
  </div>
</div>