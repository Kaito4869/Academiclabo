<div class="new-header">
  <%= link_to image_tag("26022021154125A.png", class:"logo"), "/" %>
</div>
<main class="main">
  <div class="show-inner">
    <div class="show_wrapper">
      <%= link_to "by #{@post.user.nickname}", user_path(@post.user), class: :post_user %>
      <% if current_user == @post.user%>
        <div class="post_manage">
          <%= link_to "Edit", edit_post_path(@post), method: :get, class: "post-edit-btn" %>
          <%= link_to "Delete", post_path(@post), method: :delete, class:"post-destroy-btn" %>
        </div>
      <% end %>
      <div class="post_title">
        <p class="detail_title">
          <%= @post.title%>
        </p>
      </div>
      <div class="post_image">
        <% if @post.image.present? %>
          <div class="image-form">
            <%= image_tag @post.image, class: "show-image" %>
          </div>
        <% end %>
      </div>
      <div class="post_body">
        <div class="post_detail">
          <div class="message-form">
            <p class="detail_message">
              <%= @post.text %>
            </p>
          </div>
        </div>
      </div>
      <div class="post_comments">
        <%= form_with model: [@post, @comment], local: true do |f|%>
          <div class="comment-form">
            <div class="field">
              <%= f.label :text, "コメント", class:"comment-title" %><br />
              <%= f.text_area :text, class:"comment-field" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :post_comment_btn  %>
            </div>
          </div>
        <% end %> 
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= link_to "#{comment.user.nickname}：", "#", class: :comment_user %>
              <%= comment.text %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>