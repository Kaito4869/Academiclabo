<div class="new-header">
  <%= link_to image_tag("26022021154125A.png", class:"new-logo"), "/" %>
</div>
<div class="posts-main">
  <%= form_with model: @post, url: posts_path, local: true do |f| %>
    <h2 class="new-top">新規投稿の情報を入力</h2>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="new-posts">
      <div class="items-explain">
        <div class="weight-bold-text">
          タイトルを記入してください
          <span class="indispensable">必須</span>
        </div>
        <div class="post-field">
          <%= f.text_area :title, class:"posts-title", id:"post-info", placeholder:"タイトル" %>
        </div>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          投稿文を記入してください
          <span class="indispensable">必須</span>
        </div>
        <div class="post-field">
          <%= f.text_area :text, class:"posts-text", id:"post-info", placeholder:"投稿文" %>
        </div>
      </div>
    </div>
    <div class="img-upload">
      <div class="weight-bold-text">
        投稿画像をクリックしてファイルをアップロードしてください
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"post-image" %>
      </div>
    </div>
    <div class="psot-detail">
      <div class="grade-form">
        <div class="weight-bold-text">
          学年を選択してください
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"grade-select"}) %>
      </div>
      <div class="grade-form">
        <div class="weight-bold-text">
          科目を選択してください
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:subject_id, Subject.all, :id, :name, {}, {class:"grade-select"}) %>
      </div>
    <div class="post-btn-contents">
      <%= f.submit "投稿する" ,class:"post-create-btn" %>
    </div>
  <% end %>
</div>