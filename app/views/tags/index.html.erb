<div class="new-header">
  <%= link_to image_tag("26022021154125A.png", class:"new-logo"), "/" %>
</div>
<div class="search-content">
  <form class="search-form" action="#">
    <input class='input-box' placeholder='タイトルから探す'>
    <button class="search-button">
      <%= image_tag "search.png", class:"search-icon" %>
    </button>
  </form>
</div>
<div class="main">
  <div class="left-box">
  </div>
  <div class="center-box">
    <% @posts.each do |post| %>
      <div class="card">
        <% if post.image.present? %>
          <%= link_to image_tag(post.image, class: :card_img ) %>
        <% end %>
        <div class="card_body">
          <p class="card_summary">
            <%= post.title %>
          </p>
          <div class="show-form">
            <%= link_to "詳細", post_path(post), class: :show_btn %>
          </div>
          <%= link_to "by #{post.user.nickname}", user_path(post.user), class: :card_user %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="right-box">
  </div>
</div>