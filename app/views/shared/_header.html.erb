<header class='top-page-header'>
  <div class='top-contents'>
    <%= link_to "Academiclabo", "/", class: :logo%>
      <ul class='lists-right'>
        <% if user_signed_in? %>
          <li class="user-nickname"><%= link_to current_user.nickname, user_path(current_user), class: "user_nickname" %></li>
          <li class="user-logout"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "user_logout" %></li>
        <% else %>
          <li class="user-login"><%= link_to 'ログイン', new_user_session_path, class: "user_login" %></li>
          <li class="user-sign-up"><%= link_to '新規登録', new_user_registration_path, class: "user_sign-up" %></li>
        <% end %>
      </ul>
  </div>
  <div class="search-content">
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :title, placeholder: "タイトルから検索する", class: "input-box" %>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    <%end%>
  </div>
</header>