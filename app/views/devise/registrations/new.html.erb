<div class="body">
  <div class="bg"></div>
  <div class="bg bg2"></div>
  <div class="bg bg3"></div>
  <div class="content">
  <div class="new-header">
    <%= link_to "Academiclabo", "/", class: :logo%>
  </div>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ユーザー情報入力
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム(必須)</label>
      </div>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) Taro" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">学年(必須)</label>
      </div>
      <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"grade-select"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前(必須)</label>
      </div>
      <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 田中太郎"%>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス(必須)</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(必須)</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text1'>※英字と数字の両方を含めて設定してください(必須)</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード確認(必須)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="form-group">
      <p class='info-text2'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
    </div>
    <div class='register-btn'>
      <%= f.submit "新規登録" ,class:"register_btn" %>
    </div>
  </div>
  <% end %>
</div>